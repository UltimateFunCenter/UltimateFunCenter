@page
@model CreateModel

@{
    ViewData["Title"] = "Facility Create";
}

<h1>Facility Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Facility.Name" class="control-label"></label>
                <input asp-for="Facility.Name" class="form-control" />
                <span asp-validation-for="Facility.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.Description" class="control-label"></label>
                <input asp-for="Facility.Description" class="form-control" />
                <span asp-validation-for="Facility.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facility.FloorId" class="control-label"></label>
                <select asp-for="Facility.FloorId" class ="form-control" asp-items="ViewBag.FloorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

