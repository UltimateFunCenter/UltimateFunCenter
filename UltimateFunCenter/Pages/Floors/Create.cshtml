@page
@model UltimateFunCenter.Pages.Floors.CreateModel

@{
    ViewData["Title"] = "Floor Create";
}

<h1>Floor Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Floor.Level" class="control-label"></label>
                <input asp-for="Floor.Level" class="form-control" />
                <span asp-validation-for="Floor.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor.BuildingId" class="control-label"></label>
                <select asp-for="Floor.BuildingId" class ="form-control" asp-items="ViewBag.BuildingId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

